<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">  
  <p><label>Name:</label>
  <input type="text" id="pet_name" name="pet[name]" value="<%=@pet.name%>"></p>
  
  <p><label>Choose an existing owner:</label>
 
  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"
    <%= 'checked' if @pet.owner == owner %>><%= owner.name %></input>
  <%end%></p>

  <p>and/or, create a new owner:</p>
  <p><label>Name:</label>
  <input type="text" name="owner[name]" id="owner_name"></p>
  
  <input type="submit" value="Update Pet">
</form>

